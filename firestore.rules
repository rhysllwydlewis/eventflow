rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is the owner of a resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      // Users can update their own data, admins can update all
      allow update: if isOwner(userId) || isAdmin();
      // Only admins can create and delete users
      allow create: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Packages collection
    match /packages/{packageId} {
      // Anyone can read approved packages, authenticated users can read all
      allow read: if isAuthenticated() || resource.data.approved == true;
      // Only admins can write packages
      allow write: if isAdmin();
    }
    
    // Suppliers collection
    match /suppliers/{supplierId} {
      // Anyone can read approved suppliers, authenticated users can read all
      allow read: if isAuthenticated() || resource.data.approved == true;
      // Suppliers can update their own profile, admins can do everything
      allow update: if isAdmin() || (isAuthenticated() && resource.data.ownerUserId == request.auth.uid);
      // Only admins can create and delete
      allow create, delete: if isAdmin();
    }
    
    // Customers collection
    match /customers/{customerId} {
      // Customers can read/write their own data, admins can read/write all
      allow read, write: if isOwner(customerId) || isAdmin();
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      // Users can read conversations they're part of, admins can read all
      allow read: if isAuthenticated() && (
        resource.data.customerId == request.auth.uid ||
        resource.data.supplierId == request.auth.uid ||
        isAdmin()
      );
      // Users can create conversations
      allow create: if isAuthenticated();
      // Users can update conversations they're part of
      allow update: if isAuthenticated() && (
        resource.data.customerId == request.auth.uid ||
        resource.data.supplierId == request.auth.uid
      );
      
      // Messages subcollection
      match /messages/{messageId} {
        // Same permissions as parent conversation
        allow read: if isAuthenticated() && (
          get(/databases/$(database)/documents/conversations/$(conversationId)).data.customerId == request.auth.uid ||
          get(/databases/$(database)/documents/conversations/$(conversationId)).data.supplierId == request.auth.uid ||
          isAdmin()
        );
        // Users in the conversation can create messages
        allow create: if isAuthenticated() && (
          get(/databases/$(database)/documents/conversations/$(conversationId)).data.customerId == request.auth.uid ||
          get(/databases/$(database)/documents/conversations/$(conversationId)).data.supplierId == request.auth.uid
        );
        // Messages cannot be updated or deleted
        allow update, delete: if false;
      }
    }
    
    // Tickets collection
    match /tickets/{ticketId} {
      // Users can read their own tickets, admins can read all
      allow read: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid ||
        isAdmin()
      );
      // Authenticated users can create tickets
      allow create: if isAuthenticated();
      // Users can update their own tickets, admins can update all
      allow update: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid ||
        isAdmin()
      );
      // Only admins can delete tickets
      allow delete: if isAdmin();
    }
    
    // Subscription Plans collection
    match /subscriptionPlans/{planId} {
      // Anyone can read subscription plans
      allow read: if true;
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // Payments collection
    match /payments/{paymentId} {
      // Users can read their own payments, admins can read all
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      // Authenticated users can create payments
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Cloud Functions and admins can update payments
      allow update: if isAdmin();
      // Only admins can delete payments
      allow delete: if isAdmin();
    }
  }
}
