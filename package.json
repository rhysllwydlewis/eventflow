{
  "name": "eventflow-fullstack",
  "version": "18.0.2",
  "private": true,
  "engines": {
    "node": ">=20.0.0 <22.0.0"
  },
  "main": "server.js",
  "scripts": {
    "dev": "node server.js",
    "start": "node server.js",
    "migrate": "node migrate-to-mongodb.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:static": "playwright test --grep-invert @backend",
    "test:e2e:full": "E2E_MODE=full playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:headers": "node scripts/verify-security-headers.mjs",
    "audit": "npm audit --production",
    "prepare": "husky install",
    "release:tag": "git tag -a v$npm_package_version -m \"Release v$npm_package_version\" && git push origin v$npm_package_version",
    "release:tag:interactive": "bash scripts/create-release-tag.sh"
  },
  "dependencies": {
    "@sentry/node": "^8.0.0",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.6",
    "cloudinary": "^2.8.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "file-type": "^16.5.4",
    "form-data": "^4.0.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.10.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pdfkit": "^0.15.0",
    "postmark": "^4.0.5",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "stripe": "^20.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.22",
    "winston": "^3.19.0",
    "workbox-webpack-plugin": "^7.3.0",
    "xlsx": "^0.18.5"
  },
  "vulnerabilities": {
    "xlsx": {
      "version": "0.18.5",
      "severity": "high",
      "issues": [
        "Prototype Pollution (GHSA-4r6h-8v6p-xvw6)",
        "Regular Expression Denial of Service (GHSA-5pgg-2g8v-p4x9)"
      ],
      "risk": "LOW - Used only by authenticated admin users for data export. Input is sanitized and no user-controlled data is processed.",
      "mitigation": "No fix available. Consider replacing with safer alternative in future.",
      "documentation": "See SECURITY.md for more details"
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@sentry/browser": "^8.0.0",
    "@types/jest": "^29.5.14",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^2.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "mongodb-memory-server": "^11.0.1",
    "prettier": "^3.7.4",
    "supertest": "^6.3.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
